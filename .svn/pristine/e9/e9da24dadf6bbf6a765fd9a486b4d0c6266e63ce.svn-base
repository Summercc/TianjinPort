    font-weight: 600;
    text-align: center;
    background: url(../images/button.png) center;
    background-size: 100% 100%;
    cursor: pointer;
    color: #ccc;
    position: absolute;
    top:260px;
    left:96px;
}
.login_box .u_message,.login_box .psd_message{
    color: #c80000;
    font-size: 12px;
}